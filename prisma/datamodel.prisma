type Link {    
    id: ID! @unique
    createdAt: DateTime!
    description: String!
    url: String!
    postedBy: User
    votes: [Vote!]!
}

type User {
    id: ID! @unique
    user_id: String! @unique
    name: String!
    email: String! @unique
    password: String
    links: [Link!]!
    clusters: [Cluster!]!
}

type Vote {
    id: ID! @unique
    link: Link!
    voter: User!
}

type Position {
    id: ID! @unique
    positionName: String!
    status: Boolean!
    nominees: [User!]!

}

type Cluster {
    id: ID! @unique
    clusterName: String! @unique
    clusterHead: User!
    positions: [Position!]!
}

type ClusterMember {
    id: ID! @unique
    cluster: Cluster!
    member: User!
}
