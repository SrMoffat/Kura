type User {
    id: ID! @id
    user_id: String! @unique
    name: String!
    email: String! @unique
    password: String!
    links: [Link!]!
    clusters: [Cluster!]! @relation(name: "ClusterMember")
    updatedAt: DateTime! @updatedAt
    createdAt: DateTime! @createdAt
}

type Link {    
    id: ID! @id
    description: String!
    url: String!
    postedBy: User
    votes: [Vote!]!
    updatedAt: DateTime! @updatedAt
    createdAt: DateTime! @createdAt
}

type Vote {
    id: ID! @id
    link: Link!
    voter: User!
    updatedAt: DateTime! @updatedAt
    createdAt: DateTime! @createdAt
}

type Position {
    id: ID! @id
    positionName: String!
    cluster: Cluster!
    open: Boolean! @default(value: true)
    nominees: [User!]
    updatedAt: DateTime! @updatedAt
    createdAt: DateTime! @createdAt

}

type Cluster {
    id: ID! @id
    clusterName: String! @unique
    clusterHead: User! @relation(name: "ClusterLeader" link: TABLE)
    positions: [Position!]!
    members: [User!]! @relation(name: "ClusterMember")
    updatedAt: DateTime! @updatedAt
    createdAt: DateTime! @createdAt
}